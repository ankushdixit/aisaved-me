{
  "threshold": 5,
  "reporters": ["html", "console"],
  "ignore": [
    "node_modules/**",
    ".next/**",
    "coverage/**",
    "dist/**",
    "build/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "components/landing/memphis/**",
    "components/landing/japanese/**",
    "components/landing/organic/**",
    "components/ui/memphis/**",
    "components/ui/japanese/**",
    "components/ui/organic/**",
    "components/stories/memphis/**",
    "components/stories/japanese/**",
    "components/stories/organic/**",
    "components/auth/memphis/**",
    "components/auth/japanese/**",
    "components/auth/organic/**"
